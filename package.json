{
  "name": "auto-release-draft",
  "version": "0.0.0",
  "private": true,
  "description": "Drafts a GitHub release with the changes introduced by a newly created version tag",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint **/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecampidoglio/auto-release-draft.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Enrico Campidoglio",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.0.2",
    "@actions/github": "^2.0.0",
    "semver": "^6.3.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/jest-when": "^2.7.0",
    "@types/node": "^12.7.12",
    "@types/semver": "^6.2.0",
    "@typescript-eslint/parser": "^2.8.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "jest-when": "^2.7.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.19.1",
    "ts-jest": "^29.0.1",
    "typescript": "^3.7.4"
  }
}
